{
  "swagger": "2.0",
  "info": {
    "version": "1.0.0",
    "title": "Swagger EmployeeStore"
  },
  "host": "localhost:3000",
  "basePath": "/api",
  "tags": [
    {
      "name": "employees",
      "description": "Everything about employee"
    },
    {
      "name": "user",
      "description": "Everything about user"
    }
  ],
  "schemes": [
    "https"
  ],
  "produces": [
    "application/json"
  ],
  "securityDefinitions": {
    "Bearer": {
      "type": "apiKey",
      "name": "Authorization",
      "in": "header"
    }
  },
  "paths": {
    "/employees?pagesize={pagesize}&page={page}": {
      "get": {
        "tags": [
          "employees"
        ],
        "summary": "Returns a list of employees.",
        "parameters": [
          {
            "in": "path",
            "name": "pagesize",
            "schema": {
              "type": "integer"
            },
            "required": true,
            "description": "Quantity of employees on the one page"
          },
          {
            "in": "path",
            "name": "page",
            "schema": {
              "type": "integer"
            },
            "required": true,
            "description": "On what page (numbering starts from 0)"
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "400": {
            "description": "Bad request"
          }
        }
      }
    },
    "/employees/{employeeId}": {
      "get": {
        "tags": [
          "employees"
        ],
        "summary": "Returns information about one employee.",
        "parameters": [
          {
            "in": "path",
            "name": "employeeId",
            "schema": {
              "type": "integer"
            },
            "required": true,
            "description": "Numeric ID of the employee."
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "400": {
            "description": "Bad request"
          }
        }
      }
    },
    "/auth/signup": {
      "post": {
        "tags": [
          "user"
        ],
        "summary": "Save user to database",
        "content": {
          "application/x-www-form-urlencoded": {}
        },
        "parameters": [
          {
            "name": "email",
            "in": "body",
            "description": "Specifies the query string",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "201": {
            "description": "Created"
          },
          "400": {
            "description": "Bad request"
          }
        }
      }
    },
    "/auth/login": {
      "post": {
        "tags": [
          "user"
        ],
        "summary": "Logs user into the system",
        "description": "",
        "operationId": "loginUser",
        "produces": [
          "application/xml",
          "application/json"
        ],
        "parameters": [
          {
            "name": "email",
            "in": "query",
            "description": "The user email for login",
            "required": true,
            "type": "string"
          },
          {
            "name": "password",
            "in": "query",
            "description": "The password for login in clear text",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "successful operation",
            "schema": {
              "type": "string"
            },
            "headers": {
              "X-Rate-Limit": {
                "type": "integer",
                "format": "int32",
                "description": "calls per hour allowed by the user"
              },
              "X-Expires-After": {
                "type": "string",
                "format": "date-time",
                "description": "date in UTC when token expires"
              }
            }
          },
          "400": {
            "description": "Invalid username/password supplied"
          }
        }
      }
    }
  },
  "definitions": {
    "User": {
      "type": "object",
      "required": [
        "username",
        "email",
        "password"
      ],
      "properties": {
        "id": {
          "type": "integer",
          "format": "int64"
        },
        "username": {
          "type": "string"
        },
        "email": {
          "type": "string"
        },
        "password": {
          "type": "string"
        }
      },
      "xml": {
        "name": "User"
      }
    },
    "Employee": {
      "type": "object",
      "required": [
        "name",
        "active",
        "department"
      ],
      "properties": {
        "id": {
          "type": "integer",
          "format": "int64"
        },
        "name": {
          "type": "string"
        },
        "active": {
          "type": "boolean"
        },
        "department": {
          "type": "integer",
          "format": "int64"
        },
        "creator": {
          "type": "string"
        }
      },
      "xml": {
        "name": "User"
      }
    }
  }
}