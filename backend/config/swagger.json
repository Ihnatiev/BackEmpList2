{
  "swagger": "2.0",
  "info": {
    "version": "1.0.0",
    "title": "Test"
  },
  "host": "localhost:3000",
  "basePath": "/api",
  "schemes": [
    "https"
  ],
  "produces": [
    "application/json"
  ],
  "securityDefinitions": {
    "Bearer": {
      "type": "apiKey",
      "name": "Authorization",
      "in": "header"
    }
  },
  "paths": {
    "/employees/{employeeId}": {
      "get": {
        "tags": [
          "Get an employee"
        ],
        "summary": "Returns information about one employee.",
        "parameters": [
          {
            "in": "path",
            "name": "employeeId",
            "schema": {
              "type": "integer"
            },
            "required": true,
            "description": "Numeric ID of the employee."
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "400": {
            "description": "Bad request"
          }
        }
      }
    },
    "/employees?pagesize={pagesize}&page={page}": {
      "get": {
        "tags": [
          "Get employees"
        ],
        "summary": "Returns a list of employees.",
        "parameters": [
          {
            "in": "path",
            "name": "pagesize",
            "schema": {
              "type": "integer"
            },
            "required": true,
            "description": "Quantity of employees on the one page"
          },
          {
            "in": "path",
            "name": "page",
            "schema": {
              "type": "integer"
            },
            "required": true,
            "description": "On what page (numbering starts from 0)"
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "400": {
            "description": "Bad request"
          }
        }
      }
    },
    "/auth/signup": {
      "post": {
        "tags": [
          "SignUp"
        ],
        "summary": "Save user to database",
        "content": {
          "application/x-www-form-urlencoded": {}
        },
        "parameters": [
          {
            "name": "email",
            "in": "body",
            "description": "Specifies the query string",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "201": {
            "description": "Created"
          },
          "400": {
            "description": "Bad request"
          }
        }
      }
    }
  }
}